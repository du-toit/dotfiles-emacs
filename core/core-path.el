;;; Global Paths

;; ----------------------------------------------------------------------
;; Path : Executables
;; ----------------------------------------------------------------------

(setq exec-path
    (append exec-path '("~/bin" "~/.local/bin" "~/.cargo/bin"))
)

;; ----------------------------------------------------------------------
;; Path : Packages
;; ----------------------------------------------------------------------

(setq package-user-dir "~/.local/share/emacs/packages")

;; ----------------------------------------------------------------------
;; Path : Packages (Cached)
;; ----------------------------------------------------------------------

(setcar native-comp-eln-load-path "~/.local/share/emacs/packages-cached")

;; ----------------------------------------------------------------------
;; Path : File Backups - Saved to cache
;; ----------------------------------------------------------------------

(setq backup-directory-alist '((".*" . "~/.cache/emacs_backups")))

;; ----------------------------------------------------------------------
;; Path : Themes
;; ----------------------------------------------------------------------

(add-to-list 'custom-theme-load-path "~/.local/share/emacs/themes")

;; ----------------------------------------------------------------------
;; Path : Misc
;; ----------------------------------------------------------------------

;; Removes the annoying "auto-save-list" directory
(setq auto-save-list-file-prefix nil)

;; ----------------------------------------------------------------------

(provide 'core-path)

;;; core-path.el ends here
